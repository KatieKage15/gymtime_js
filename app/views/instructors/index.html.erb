<p id="notice"><%= notice %></p>

<h1>Instructors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructor.each do |instructor| %>
      <tr>
        <td><%= link_to instructor.name, instructors_path %></td>
        <td><%= instructor.bio %></td>
        <td><%= link_to 'Show', instructor %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Client', new_client_path %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="our-new-instructors"></div>
